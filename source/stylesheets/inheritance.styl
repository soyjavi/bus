@import "__init.styl"

section
  & > header
    & .title.extended
      line-height: 30px !important
      & > strong
        font-weight: 700
        display: block
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
      & > small
        display: block
        font-size: 0.7em
        line-height: 0.25em
        color: darken(THEME, 50%)
        font-weight: 600
        text-shadow: 0 1px 0 lighten(THEME, 25%)
