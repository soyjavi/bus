    //   background: THEME
    // &.active, &:active
    //   border-color: transparent
    //   & strong, & small, & .icon
    //     color: #fff
    & strong
      color: lighten(COLOR, 75%)
    & small, .icon
      color: lighten(COLOR, 40%)
